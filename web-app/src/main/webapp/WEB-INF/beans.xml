<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${db.driver}"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.username}"/>
        <property name="password" value="${db.password}"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="departmentDao" class="org.example.EPAM_FARM.backend.dao.impl.DepartmentDaoImpl" />

    <bean id="departmentService" class="org.example.EPAM_FARM.backend.service.impl.DepartmentServiceImpl" />

    <bean id="jdbcStorageDao" class="org.example.EPAM_FARM.backend.dao.impl.JdbcStorageDaoImpl" />

    <bean id="jdbcStorageService" class="org.example.EPAM_FARM.backend.service.impl.JdbcStorageServiceImpl" />

    <bean id="employeeDao" class="org.example.EPAM_FARM.backend.dao.impl.EmployeeDaoImpl" />

    <bean id="employeeService" class="org.example.EPAM_FARM.backend.service.impl.EmployeeServiceImpl" />

    <bean id="converterService" class="org.example.EPAM_FARM.backend.service.impl.ConverterServiceImpl" />

    <bean id="userDao" class="org.example.EPAM_FARM.backend.dao.impl.UserDaoImpl" />

    <bean id="userService" class="org.example.EPAM_FARM.backend.service.impl.UserServiceImpl" />

</beans>